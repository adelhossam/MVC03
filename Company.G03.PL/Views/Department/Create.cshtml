@model Department
@{
    ViewData["Title"] = "Create";
}

<h1>Create Department Page</h1>
<br />
<br />

<form asp-action="Create">
    <div class="form-group ">
        <label asp-for="Code" class="col-form-lable"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Name" class="col-form-lable"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="DateOfCreation" class="col-form-lable"></label>
        <input asp-for="DateOfCreation" class="form-control" />
    </div>

    <br />
    <input type="submit" value="Create" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light" >Back To List</a>
</form>

@* Client Side Validation The Page Wont Send Request To Server Unless It Sure The Request Dosent Fail
Like Form if U Send it Without Complete it it Wont Sent a Request To Server   *@

@section ClientServerValidation
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}