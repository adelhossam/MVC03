@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div asp-validation-summary="All" class="alert alert-danger"></div>  @* To Print The Exception *@
	<div class="agileits-top">
		<form asp-action="SignUp" method="post">
			<input class="text" type="text" asp-for="UserName" placeholder="Username" required>
			<input class="text" type="text" asp-for="FirstName" placeholder="FirstName" required>
			<input class="text" type="text" asp-for="LastName" placeholder="LastName" required>
			<input class="text email" type="email" asp-for="Email" placeholder="Email" required>
			<input class="text" type="password" asp-for="Password" placeholder="Password" required>
			<input class="text w3lpass" type="password" asp-for="ConfirmedPassword" placeholder="Confirm Password" required>
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="IsAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Don't have an Account? <a href="SignIn"> Login Now!</a></p>
	</div>
</div>

