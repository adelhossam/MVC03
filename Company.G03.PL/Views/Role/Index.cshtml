@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Users</h1>
<br />
<br />



<form asp-action="Index">
    <div class="row m-5">
        <div class="col-6 ">
            <input type="text" name="SearchInput" id="SerachInput" placeholder="Select Name..." class="form-control" />
        </div>
        <div class="col-4 ">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </div>
</form>
<br />

<a asp-action="Create" class="btn btn-primary">Create Role</a>

<br />
<br />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(R => R.Id)</th>
                <th>@Html.DisplayNameFor(R => R.RoleName)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.RoleName</td>

                    <partial name="_ButtonsPartialView" model="@Role.Id" />
                </tr>

            }
        </tbody>

    </table>
}
else
{
    <div class="alert alert-danger">
        <h4>No Employees Exites</h4>
    </div>

}

