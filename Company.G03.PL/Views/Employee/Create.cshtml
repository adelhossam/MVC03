@model Employee
@{
    ViewData["Title"] = "Create";
}

<h1>Create Employee</h1>
<br />
<br />

<form asp-action="Create">
    <div class="form-group ">
        <label asp-for="Name" class="col-form-lable"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="Age" class="col-form-lable"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="Address" class="col-form-lable"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="Email" class="col-form-lable"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="PhoneNumber" class="col-form-lable"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="Salary" class="col-form-lable"></label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="IsActive" class="form-check"></label>
        <input asp-for="IsActive" class="form-check" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="HiringDate" class="col-form-lable"></label>
        <input asp-for="HiringDate" class="form-control" />
        <span asp-validation-for="HiringDate" class="text-danger"></span>
    </div>

    <br />
    <input value="Create" type="submit" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>

